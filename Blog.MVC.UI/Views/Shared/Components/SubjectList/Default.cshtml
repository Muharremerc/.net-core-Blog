@model IQueryable<MemberViewSubjectDTO>
@{
    Layout = null;
}
@foreach (MemberViewSubjectDTO item in Model)
{
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary"></strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="#">@item.Header</a>
                </h3>
                <div class="mb-1 text-muted">@item.CreatedDate</div>
                <p class="card-text mb-auto">Sender : @((item.LastMember) == null ? "No Comment" : item.LastMember) <br /> Last Comment : @((item.LastComment) == null ? "No Comment" : item.LastComment) <br />Content : @item.Content</p>
                <a href="#">Comment Count : @item.CommentCount</a>
                @Html.ActionLink("AcceptComments", "SubjectOfComments", "Subject", new { SubjectID = item.ID })
                @Html.ActionLink("Show All Comments", "Comments", "Subject", new { id = item.ID })
            </div>
            <img class="card-img-right flex-auto d-none d-md-block" data-src="holder.js/200x250?theme=thumb" alt="Card image cap">
        </div>
    </div>
}

