@model IEnumerable<Blog.MVC.UI.Models.CategorySubjectDTO>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-1">
        </div>
        <div class="col-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Header)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Content)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Creater)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CommentCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastMember)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastComment)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Header)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Content)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Creater)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CommentCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastMember)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastComment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.ActionLink("Show Content", "SubjectDetails", "Category",new {id=item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
